{
  "root": false,
  "extends": "//",
  "files": {
    "ignoreUnknown": false,
    "includes": ["*", "!build", "!.vite"]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "style": {
        "useComponentExportOnlyModules": {
          "level": "warn",
          "options": { "allowConstantExport": true }
        },
        "noNonNullAssertion": "warn"
      }
    }
  }
}
